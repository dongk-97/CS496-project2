<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment3Activity"
    >

    <RelativeLayout
        android:id="@+id/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/blue"
            android:background="@android:color/holo_blue_light"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/CityInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/annie_use_your_telescope"
                android:text="London"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TimeDateInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CityInfo"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/annie_use_your_telescope"
                android:text="2017-04-18 12:42:28"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/WeatherCat"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_below="@+id/TimeDateInfo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/cat_coat" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/WeatherCat"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/tv_WeatherInfo6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/architects_daughter"
                    android:text="Today's Weather"
                    android:textColor="#FFF"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/Weather"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/sun"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="30dp"
            android:text=" " />


        <TextView
            android:id="@+id/tv_Taginfo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blue"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/space"
            android:fontFamily="@font/annie_use_your_telescope"
            android:text="Temperature"
            android:textColor="#2890b7"
            android:textSize="20dp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform" />


        <TextView
            android:id="@+id/tv_WeatherInfo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blue"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/space"
            android:fontFamily="@font/annie_use_your_telescope"
            android:text="Today's Weather"
            android:textColor="#0C0101"
            android:textSize="20dp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/tv_Taginfo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Taginfo1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/space"
            android:fontFamily="@font/annie_use_your_telescope"
            android:text="Humidity"
            android:textColor="#2890b7"
            android:textSize="20dp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform" />


        <TextView
            android:id="@+id/tv_WeatherInfo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_WeatherInfo1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/space"
            android:fontFamily="@font/annie_use_your_telescope"
            android:text="Today's Weather"
            android:textColor="#0C0101"
            android:textSize="20dp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/tv_Taginfo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Taginfo2"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/space"
            android:fontFamily="@font/annie_use_your_telescope"
            android:text="Wind"
            android:textColor="#2890b7"
            android:textSize="20dp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform" />


        <TextView
            android:id="@+id/tv_WeatherInfo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_WeatherInfo2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/space"
            android:fontFamily="@font/annie_use_your_telescope"
            android:text="Today's Weather"
            android:textColor="#0C0101"
            android:textSize="20dp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/tv_Taginfo4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Taginfo3"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/space"
            android:fontFamily="@font/annie_use_your_telescope"
            android:text="Clouds"
            android:textColor="#2890b7"
            android:textSize="20dp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform" />


        <TextView
            android:id="@+id/tv_WeatherInfo4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_WeatherInfo3"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/space"
            android:fontFamily="@font/annie_use_your_telescope"
            android:text="Today's Weather"
            android:textColor="#0C0101"
            android:textSize="20dp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/tv_Taginfo5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Taginfo4"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/space"
            android:fontFamily="@font/annie_use_your_telescope"
            android:text="Precipitation"
            android:textColor="#2890b7"
            android:textSize="20dp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform" />


        <TextView
            android:id="@+id/tv_WeatherInfo5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_WeatherInfo4"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/space"
            android:fontFamily="@font/annie_use_your_telescope"
            android:text="Today's Weather"
            android:textColor="#0C0101"
            android:textSize="20dp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_below="@+id/tv_Taginfo5"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="cursive"
                    android:text="From "
                    android:textColor="#0C0101"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/annie_use_your_telescope"
                    android:text="openweathermap"
                    android:textColor="#0C0101"
                    android:textSize="15dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/updatedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Updated  "
                    android:fontFamily="cursive"
                    android:textColor="#0C0101"
                    android:textSize="15dp"
                    />

                <TextView
                    android:id="@+id/LastUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/annie_use_your_telescope"
                    android:text="2017-01-30T15:50:00 "
                    android:textColor="#0C0101"
                    android:textSize="15dp"
                    app:autoSizeTextType="uniform" />

                <ImageView
                    android:id="@+id/reset"
                    android:src="@drawable/reset"
                    android:layout_toRightOf="@+id/LastUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</ScrollView>