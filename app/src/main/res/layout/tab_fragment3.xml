<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/textandimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/loading"
            android:fontFamily="@font/annie_use_your_telescope"
            android:foregroundTint="#0A0001"
            android:text="Today's Weather is ..."
            android:textColor="#0C0101"
            android:textSize="40dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/loading"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignBottom="@+id/textandimage"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/loading" />

    </LinearLayout>


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textandimage"
        android:layout_marginLeft="-178dp"
        android:layout_marginTop="-126dp"
        android:layout_toRightOf="@+id/textandimage"
        android:src="@drawable/hand" />



</RelativeLayout>